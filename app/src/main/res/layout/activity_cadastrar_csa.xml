<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.victorbruno.karimaprodutor.activity.CriarContaActivity"
    android:background="@drawable/background">



    <EditText
        android:id="@+id/editText_nome_csa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome CSA"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/imageView_imagem_csa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:id="@+id/editText_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:hint="Endereço"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/editText_descricaco_csa"
        android:layout_alignLeft="@+id/editText_descricaco_csa"
        android:layout_alignStart="@+id/editText_descricaco_csa"
        android:layout_marginTop="18dp" />

    <EditText
        android:id="@+id/editText_valor_csa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"

        android:hint="Valor"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/button_localizacao"
        android:layout_alignLeft="@+id/editText_endereco"
        android:layout_alignStart="@+id/editText_endereco"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/button_localizacao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_add_location_black_24dp"
        android:layout_alignBaseline="@+id/editText_endereco"
        android:layout_alignBottom="@+id/editText_endereco"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp" />

    <EditText
        android:id="@+id/editText_vagas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:hint="Vagas"
        android:layout_below="@+id/editText_valor_csa"
        android:layout_alignLeft="@+id/editText_valor_csa"
        android:layout_alignStart="@+id/editText_valor_csa"
        android:layout_marginTop="9dp" />

    <EditText
        android:id="@+id/editText_descricaco_csa"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/preto"
        android:textColor="@color/preto"
        android:background="@color/colorPrimary"
        android:hint="Descrição da CSA"
        android:layout_below="@+id/editText_nome_csa"
        android:layout_alignLeft="@+id/editText_nome_csa"
        android:layout_alignStart="@+id/editText_nome_csa"
        android:layout_marginTop="19dp" />




    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageView_imagem_csa"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_salvar_csa"
        android:layout_alignEnd="@+id/button_salvar_csa"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/button_salvar_csa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_below="@+id/editText_vagas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />


</RelativeLayout>
